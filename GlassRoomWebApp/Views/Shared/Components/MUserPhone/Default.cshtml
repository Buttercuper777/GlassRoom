@model UserPhone

<img src="~/images/close.svg" class="close_svg" width="13px">
<center><a>Оставь номер тут, а мы<br>перезвоним!</a></center>
<form asp-area="Home" asp-controller="UserPhone" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="input">

        <center><h1>Успешно!</h1></center>

        <div asp-validation-summary="All"></div>
        <div class="pop_input">
            <input type="text" asp-for="Name" placeholder="Имя:" id="InputNameVal"></input>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="pop_input">
            <input type="phone" asp-for="PhoneNum" placeholder="Телефон:" id="InputPhoneNumberVal"></input>
            <span asp-validation-for="PhoneNum"></span>
        </div>

        <div class="pop_input">
            <input type="submit" id="SendUserButton" disabled></input>
        </div>
    </div>
</form>
