@model ServiceItem
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}



<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="TitleImagePath" />

            <div asp-validation-summary="All"></div>


            <div>
                <h3><label asp-for="Title"></label></h3>
                <input asp-for="Title" value="@(Model.Title)">
                <span asp-validation-for="Title"></span>
            </div>

            <div>
                <h3><label asp-for="Subtitle"></label></h3>
                <input asp-for="Subtitle" value="@(Model.Subtitle)" placeholder="Купить в Краснодаре">
                <span asp-validation-for="Subtitle"></span>
            </div>



            <div>
                <b>*Используй &lt;br/&gt; чтобы задать переносы строки!<br />Пример:<br />Lorem ipsum tempus: nulla tempus, &lt;br/&gt;<br/>enim adipiscing vitae...</b>
                <h3><label asp-for="Text"></label></h3>
                <textarea asp-for="Text" cols="78" rows="15">@(Model.Text)</textarea>
                <span asp-validation-for="Text"></span>
            </div>

            <div class="inputFileBlock">
                <input type="file" name="titleImageFile" class="inputFile" id="titleImageFile" />
                <label for="titleImageFile"><span>Добавить изображение</span></label><br><br/><br />
                <div>
                    <img class="img-block" src="~/images/@Model.TitleImagePath" width="200px"/>
                </div>
            </div>

            <div>
                <h3><label asp-for="MetaTitle"></label></h3>
                <input asp-for="MetaTitle" value="@(Model.MetaTitle)">
                <span asp-validation-for="MetaTitle"></span>
            </div>

            <div>
                <h3><label asp-for="MetaDescription"></label></h3>
                <textarea asp-for="MetaDescription" cols="70" rows="8" placeholder="Description">@(Model.MetaDescription)</textarea>
                <span asp-validation-for="MetaDescription"></span>
            </div>

            <div>
                <h3><label asp-for="MetaKeywords"></label></h3>
                <textarea asp-for="MetaKeywords" cols="70" rows="8" placeholder="Keywords">@(Model.MetaKeywords)</textarea>
                <span asp-validation-for="MetaKeywords"></span>
            </div>
            <br><input type="submit" value="Сохранить">
        </form>
    </div>
</div>



